{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "Buff Achievement Tracker",
        "version": "0.3.4",
        "minimum-overwolf-version": "0.119.1",
        "author": "buff.game",
        "icon": "IconMouseOver.png",
        "icon_gray": "IconMouseNormal.png",
        "launcher_icon": "launcher_icon.ico",
        "description": "Track your achievements, earn BUFF coins, buy stuff",
        "dock_button_title": "BUFF"
    },
    "permissions": ["Extensions", "Streaming", "Profile", "GameInfo"],
    "data": {
        "start_window": "index",
        "protocol_override_domains": { "googlesyndication": "http" },
        "developer": {
            "enable_auto_refresh": true,
            "reload_delay": 1000
        },
        "game_targeting": {
            "type": "dedicated",
            "game_ids": [7314, 5426, 21216, 7764]
        },
        "hotkeys": {
            "toggle_app": {
                "title": "Show/Hide Buff window",
                "action-type": "toggle",
                "default": "Shift+F3"
            }
        },
        "windows": {
            "index": {
                "file": "controller.html",
                "is_background_page": true
            },
            "main": {
                "file": "index.html",
                "transparent": true,
                "disable_rightclick": true,
                "clickthrough": false,
                "resizable": false,
                "is_background_page": false,
                "show_in_taskbar": true,
                "show_minimize": true,
                "override_on_update": true,
                "size": {
                    "width": 1300,
                    "height": 720
                },
                "min_size": {
                    "width": 1300,
                    "height": 720
                },
                "max_size": {
                    "width": 1300,
                    "height": 720
                },
                "block_top_window_navigation": true,
                "popup_blocker": true,
                "mute": true,
                "force_browser": "overwolf"
            }
        },
        "game_events": [7314, 5426, 21216, 7764],
        "launch_events": [
            {
                "event": "GameLaunch",
                "event_data": {
                    "game_ids": [7314, 5426, 21216, 7764]
                },
                "start_minimized": true
            }
        ]
    }
}
